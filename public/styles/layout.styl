#header
#content
#footer
	width 100%
	float left

#header, #footer
	*
		color $palette-white

#header
	.inactive
		*
			opacity 0.7

#header
	position fixed
	height $navi-height
	background-image $black-background
	box-shadow 1px 10px 13px $box-shadow-color
	z-index 1
	.search *
		color $palette-black

.centered
	margin-left auto
	margin-right auto
	width $centered-content-width + 10px
	div
		float left

#header-navi
	width 68%
	#logo
		padding 3px 10px
	a.logo
		color $palette-green
		font-size $font-size-header
		text-decoration none
	.menu
		font-size 16pt
		padding 0px 10px 0px 5px
	.menu:hover
		cursor pointer
	.search
		color $palette-black
		width 60%
		background-color $palette-white
		margin 4px 0

#player-controls
	width 30%
	min-width 300px
	float left

p.player i, div.menu i
	margin 6px 16px 0 0

#content
	position relative
	top $navi-height
	margin-top 15px

#search-result
	width 69%

#play-list
	width 29%
	border-right: 1px solid $box-shadow-color

#footer
	position fixed
	bottom 0px
	background-image $black-background

div.singleresult
	height 220px
	width 220px
	// overflow hidden
	border 1px solid $palette-green
	img.resultImage
		width inherit
		height inherit
		z-index -1
		position absolute
		clip rect(0px, 220px, 220px, 0px)
	i.resultItemIcon
		display none
	.bottomRight
		right 0
		bottom 0
	.topLeft
		left 0
	.bottomLeft
		bottom 0

i.resultItemIcon
	display none
	position absolute
	color $palette-black
	margin 11px
	cursor pointer

div.singleresult:hover
	position relative
	img
		opacity 0.3
	i.resultItemIcon
		display block

.imageView
	img
		opacity 1
	.additionalInfo
		*
			display none

.additionalInfoView
	img
		opacity 0.1
	.additionalInfo
		padding-left 45px
		padding-top 13px
		*
			display block


div.additionalInfoView
	h3
		font-weight bold
	.resultInformation 
		*
			display block

#itemInfo
	position absolute
	top 39px
	background-color white
	width 460px
	border 1px solid $palette-lightblue
	border-color $palette-lightblue
	border-radius 3px 3px 0 0
	border-top 1px solid grey
	padding 10px 0px 10px 10px
	*
		color $palette-black
	li
		margin-bottom 10px

#itemInfo
	i
		padding

#menu.off
	#itemInfo
		display none

#menu.on
	#itemInfo
		display block

.suggestionInfoBox
	width 450px
	div
		margin 0 5px

.menuHeading
	font-size 21pt

.default
	display block

.ajaxLoader
	margin-left auto
	margin-right auto

.loadingContainer
	display none
	padding-top 10%
	padding-left 30%

#itemInfo
	div.block
		float none
	ul
		list-style-type none
	display block
	b.highlightFont
		color $palette-darkblue
		font-weight bold